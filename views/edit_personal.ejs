<body>

    <h1>Edit Your Routine</h1>


    <% workouts.forEach(workout=> { %>
        <div>
            <form action="/index/show_personal/edit/<%=workout._id%>?_method=PUT" method="POST">
            <h3><input type="string" name="name" value="<%= workout.name %>"/> (<input type="number" name="sets" value="<%= workout.sets %>"/> Sets)</h3>
                
                        <table>    
                            <tr>
                                <th>Weight</th>
                                <th>reps</th>
                                <th>rest</th>
                                <th>rpe</th>
                            </tr>

                            

                                <tr>
                                    <td><input type="number" name="lbs" value="<%= workout.lbs %>"/></td>
                                    <td><input type="number" name="reps" value="<%= workout.reps %>"/></td>
                                    <td><input type="number" name="rest" value="<%= workout.rest %>"/></td>
                                    <td><input type="number" name="rpe" value="<%= workout.rpe %>"/></td>

                                </tr>
                            
                        </table>
                    <input type="submit" value="Submit Changes"/>
                </form>



        </div>
    <% }) %>

    



