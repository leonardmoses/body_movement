                            <% for(let k = 0; k < preset_routine[i].workout.sets; k++) { %>
                                
                                    <tr>
                                        <td><%= preset_routine[i].workout.lbs %> lbs</td>
                                        <td><%= preset_routine[i].workout.reps %>x</td>
                                        <td><%= preset_routine[i].workout.rest %>sec</td>
                                        <td><%= preset_routine[i].workout.rpe %></td>
