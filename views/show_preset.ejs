<%- include('./partials/head.ejs')%>

<link rel="stylesheet" href="/css/show.css">

<body>

    <div id="titleDiv">
        <h1>Body Movement</h1>
    </div>

    <div id="indexOuterNav">
        <div id="indexInnerNav">
            <a class="indexButtons" href="/">Home</a>
            <a class="indexButtons" href="/show_personal">Your Routine</a>
            <a class="indexButtons" href="/new">Create Exercise</a>
        </div>
    </div>

    <main>

        <div class="subHeading">
            <h2>Try this Beginner Routine.</h2>
        </div>

        <% workouts.forEach(workout=> { %>
            <div id="tableMainDiv">
                <div id="aboveName"></div>
                <h3><%= workout.name %> (<%= workout.sets %> Sets)</h3>
                <div class="addRemoveParentDiv">
                    <!-- <div class="addRemove">
                        <form class="add" action="/index/show_personal/add/<%=workout._id%>?_method=PUT" method="POST">
                            <input type="submit" name="sets" value="Add Set"/>
                        </form>

                        <form class="remove" action="/index/show_personal/remove/<%=workout._id%>?_method=PUT" method="POST">
                            <input type="submit" name="sets" value="Remove Set"/>
                        </form>
                    </div> -->
                </div>
                <table>    
                    <tr>
                        <th>Weight</th>
                        <th>reps</th>
                        <th>rest</th>
                        <th>rpe</th>
                    </tr>

                    <% for(let i = 0; i < workout.sets; i++) { %>

                        <tr>

                            <td><%= workout.lbs %></td>
                            <td><%= workout.reps %></td>
                            <td><%= workout.rest %></td>
                            <td><%= workout.rpe %></td>

                        </tr>

                    <% } %>


                </table>


                <!-- <div class="deleteDiv">
                    <form class="delete" action="/index/show_personal/<%=workout._id%>?_method=DELETE" method="POST">
                        <input type="submit" value="DELETE"/>
                    </form>
                </div> -->
            </div>
            </div>
        <% }) %>
    </main>

    
